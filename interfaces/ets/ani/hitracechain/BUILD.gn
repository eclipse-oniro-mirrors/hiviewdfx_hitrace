import("//base/hiviewdfx/hitrace/hitrace.gni")
import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")

ohos_shared_library("hitrace_chain_ani") {
  include_dirs = [
    "$hitrace_interfaces_path/ets/ani/hitracechain/include/",
    "$hitrace_interfaces_path/native/innerkits/include/hitace/",
  ]
  sources = [
    "$hitrace_interfaces_path/ets/ani/hitracechain/src/hitrace_chain_ani.cpp",
    "$hitrace_interfaces_path/ets/ani/hitracechain//src/hitrace_chain_ani_util.cpp",
  ]

  deps = [ "$hitrace_interfaces_path/native/innerkits:libhitracechain" ]

  external_deps = [
    "bounds_checking_function:libsec_shared",
    "hilog:libhilog",
    "runtime_core:ani",
  ]
  if (defined(ohos_lite)) {
    external_deps += [ "hilog_lite:hilog_lite" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  subsystem_name = "hiviewdfx"
  part_name = "hitrace"
  output_extension = "so"
}

generate_static_abc("hitrace_chain") {
  base_url = "./ets"
  files = [ "./ets/@ohos.hiTraceChain.ets" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/hitrace_chain.abc"
}

ohos_prebuilt_etc("hitrace_chain_etc") {
  source = "$target_out_dir/hitrace_chain.abc"
  module_install_dir = "framework"
  subsystem_name = "hiviewdfx"
  part_name = "hitrace"
  deps = [ ":hitrace_chain" ]
}
