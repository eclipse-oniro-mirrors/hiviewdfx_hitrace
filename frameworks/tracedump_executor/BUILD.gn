import("//base/hiviewdfx/hitrace/hitrace.gni")
import("//build/ohos.gni")

ohos_static_library("tracedump_executor") {
  configs = [ "$hitrace_common_path/build:coverage_flags" ]
  include_dirs = [
    ".",
    "$hitrace_common_path",
    "$hitrace_frameworks_path/trace_factory",
    "$hitrace_utils_path",
  ]
  sources = [
    "trace_dump_executor.cpp",
    "trace_dump_pipe.cpp",
    "trace_dump_state.cpp",
    "trace_dump_strategy.cpp",
    "trace_strategy_factory.cpp",
  ]

  deps = [
    "$hitrace_frameworks_path/trace_factory:trace_source_factory",
    "$hitrace_utils_path:hitrace_common_utils",
    "$hitrace_utils_path:hitrace_file_utils",
    "$hitrace_utils_path:hitrace_json_parser",
  ]

  external_deps = [
    "bounds_checking_function:libsec_shared",
    "c_utils:utils",
  ]

  if (defined(ohos_lite)) {
    external_deps += [ "hilog_lite:hilog_lite" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  part_name = "hitrace"
  subsystem_name = "hiviewdfx"
}
